<Defs>
  <ThoughtDef>
    <defName>RV2R_EndoSick</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RV2R_EndoRecovery</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>lightly endo sick</label>
        <description>I feel a little dizzy, but comfortable and warm.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
      <li>
        <label>endo sick</label>
        <description>I'm dizzy and tired, but really relaxed. I kinda feel... comfortably numb.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
      <li>
        <label>heavily endo sick</label>
        <description>I can't think straight, and I'm... really tired... but I-... feel good.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
      <li>
        <label>severly endo sick</label>
        <description>I'm... exausted, but... oh, this feels nice...</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
      <li>
        <label>severly endo sick</label>
        <description>I... just need... nap...</description>
        <baseMoodEffect>16</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

