        </keywords>
        <memory>RV2R_GoalPreferenceQuirkSatisfaction_Drain_Prey_Bad</memory>
      </li>
    </comps>
  </RimVore2.QuirkDef>
  <RimVore2.QuirkDef>
    <defName>RV2R_GoalPreference_Prey_Drain_Refuses</defName>
    <label>Phagophobia</label>
